include (ExternalProject)

SET(PREFIX nodeeditor)
SET(GIT_URL https://github.com/paceholder/nodeeditor.git)
SET(GIT_TAG 2.1.3)

SET(NODE_EDITOR_INSTALL_DIR ${CMAKE_BINARY_DIR}/externals/ CACHE PATH "" FORCE)

ExternalProject_Add(${PREFIX}
  GIT_REPOSITORY ${GIT_URL}
  GIT_TAG ${GIT_TAG}
  PREFIX "${CMAKE_CURRENT_BINARY_DIR}"
  UPDATE_COMMAND ""
  PATCH_COMMAND ""
  CMAKE_ARGS -DJSON_BuildTests=OFF  -DCMAKE_INSTALL_PREFIX=${NODE_EDITOR_INSTALL_DIR}
  TEST_COMMAND ""
)

SET(NODE_EDITOR_INCLUDE_DIR ${NODE_EDITOR_INSTALL_DIR}/include CACHE PATH "")

